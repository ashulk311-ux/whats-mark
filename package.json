{
  "name": "whatsapp-marketing-platform",
  "version": "1.0.0",
  "description": "Enterprise WhatsApp Marketing Automation Platform",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "test": "jest --coverage",
    "test:unit": "jest --testPathPattern=unit --coverage",
    "test:integration": "jest --testPathPattern=integration --coverage",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "tsc",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "k8s:deploy": "kubectl apply -f k8s/",
    "lint": "eslint . --ext .js,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.ts,.tsx --fix"
  },
  "keywords": [
    "whatsapp",
    "marketing",
    "automation",
    "chatbot",
    "enterprise"
  ],
  "author": "WhatsApp Marketing Platform Team",
  "license": "MIT",
